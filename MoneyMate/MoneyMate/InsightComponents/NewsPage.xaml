<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MoneyMate.InsightComponents.NewsPage">
    <ContentPage.Content>
        <StackLayout>
            <SearchBar Placeholder="Search by title..." />

            <ListView x:Name="Listview1" RowHeight="90"  ItemTapped="ListView_ItemTapped" Margin="0,50">
                 <ListView.Header>
                    <StackLayout>
                        <Label Text="Latest socio-economic news" FontSize="20" FontAttributes="Bold" Margin="10" TextColor="Black"/>
                    </StackLayout>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Title}" Detail="{Binding Brief}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>

